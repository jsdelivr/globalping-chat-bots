{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": [
			"ES2022"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "./dist",
		"removeComments": true,
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"types": [
			"node"
		]
	},
	"include": [
		"packages/**/*",
		"packages/**/*.json"
	],
	"exclude": [
		"dist",
		"node_modules"
	],
	"references": [
		{
			"path": "packages/bot-utils"
		},
		{
			"path": "packages/discord"
		},
		{
			"path": "packages/github"
		},
		{
			"path": "packages/slack"
		},
		{
			"path": "packages/main"
		}
	]
}
